<h1>My Tasks</h1>

<ol>
  <% @tasks.each do |task| %>
    <li>
        <% check_icon = task.completed ? "fa-square-check" : "fa-square" %>
        <i class="fa-regular <%= check_icon %>"></i>
        <%= link_to task.title, task_path(task) %>
        (<%= task.details %>)
        <%= link_to "✏️", edit_task_path(task) %>
        <%= link_to "🗑", task_path(task), data: {turbo_method: :delete,
          turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ol>

<%= link_to "+ Add a task", tasks_new_path %>
